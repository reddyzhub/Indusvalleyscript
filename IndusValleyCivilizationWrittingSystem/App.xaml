<Application x:Class="IndusValleyCivilizationWrittingSystem.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:IndusValleyCivilizationWrittingSystem"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <FontFamily x:Key="IconFont">
            /font/#NFM-Indus Script
        </FontFamily>

        <Style x:Key="signTxt" TargetType="TextBlock">
            <Setter Property="FontFamily" Value="{StaticResource IconFont}"></Setter>
            <Setter Property="FontSize" Value="45"></Setter>
            <Setter Property="FontWeight" Value="Bold"></Setter>
        </Style>
        <Style x:Key="rowTb" TargetType="TextBlock">
            <Setter Property="FontSize" Value="14"></Setter>
            <Setter Property="Width" Value="150"></Setter>
            <Setter Property="VerticalAlignment" Value="Center"></Setter>
        </Style>
        <Style x:Key="rowTxt" TargetType="TextBox">
            <Setter Property="Height" Value="30"></Setter>
            <Setter Property="TextAlignment" Value="Center"></Setter>
            <Setter Property="FontSize" Value="16"></Setter>
            <Setter Property="Width" Value="200"></Setter>
            <Setter Property="Margin" Value="0,2"></Setter>
        </Style>
    </Application.Resources>
</Application>
