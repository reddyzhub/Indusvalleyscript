<UserControl x:Class="IndusValleyCivilizationWrittingSystem.UCSignItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:IndusValleyCivilizationWrittingSystem"
             mc:Ignorable="d" 
             Height="80" Width="80">
    <Grid>
        <Border BorderThickness="1" BorderBrush="Black"></Border>
        <StackPanel Orientation="Vertical">
            <TextBlock Style="{StaticResource signTxt}" Text="{Binding code}" TextAlignment="Center"></TextBlock>
            <TextBlock Text="{Binding name}" TextAlignment="Center" FontSize="18" FontWeight="Bold"></TextBlock>
        </StackPanel>
    </Grid>
</UserControl>
